.table {
  border-collapse: collapse;
}

.table-head {
  background-color: var(--surface-2);
  color: var(--text-1);
}

.table-cell {
  text-align: left;
  padding: 0.25rem 0.5rem;
  border: 1px solid var(--surface-3);
}

.table-cell__number {
  text-align: right;
  font-variant-numeric: tabular-nums;
}
